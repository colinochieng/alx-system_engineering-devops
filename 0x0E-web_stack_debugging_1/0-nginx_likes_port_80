#!/usr/bin/env bash
# Bash script to make Nginx be run, and listenon port 80 of all the serverâ€™s active IPv4 IPs
sudo sed -i 's/listen 8080/listen 80/g' /etc/nginx/sites-enabled/default
sudo sed -i 's/listen \[::\]:8080/listen \[::\]:80/g' /etc/nginx/sites-enabled/default
sudo service nginx restart

